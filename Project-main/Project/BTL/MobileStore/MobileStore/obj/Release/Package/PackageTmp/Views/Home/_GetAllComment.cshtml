@model IEnumerable<MobileStore.Models.Entity.Comment>


<div class="testimonials">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="section-heading">
                    <h2>Khách hàng nói gì về chúng tôi</h2>
                    <span>Qua comment của những khách hàng thân thiết</span>
                </div>
            </div>
            <div class="col-md-12">
                <div class="owl-testimonials owl-carousel">

                    @foreach (MobileStore.Models.Entity.Comment c in Model)
                    {
                        <div class="testimonial-item">
                            <div class="inner-content">
                                <h4>@c.NameUser</h4>
                                <span>@c.Job</span>
                                <p>@c.CommentContent</p>
                            </div>
                            
                        </div>
                    }

                   

                </div>
            </div>
        </div>
    </div>
</div>
