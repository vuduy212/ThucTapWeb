@model IEnumerable<MobileStore.Models.Entity.Category>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- page content -->
<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>Products</h3>
            </div>
        </div>

        <div class="clearfix"></div>

        <div class="row">
            <div class="col-md-12 col-sm-12 ">
                <div class="x_panel">
                    <div class="x_title">
                        <ul class="nav navbar-right panel_toolbox">
                            <li>
                                <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                            </li>
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                            </li>
                            <li>
                                <a class="close-link"><i class="fa fa-close"></i></a>
                            </li>
                        </ul>
                        <div class="creatProduct">
                            <a href='@Url.Action("CreateCategory", "AdminPage")' class="btnCreate">+ Thêm chuyên mục mới</a>
                        </div>
                    </div>
                    <div class="x_content">
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="card-box table-responsive">
                                    <table id="datatable" class="table table-striped table-bordered" style="width:100%">
                                        <thead>
                                            <tr>
                                                <th style="width: 5px;">STT</th>
                                                <th>Tên loại</th>
                                                <th style="width: 100px;">Trạng thái</th>
                                                <th style="width: 100px;">Hoạt động</th>
                                            </tr>
                                        </thead>


                                        <tbody>
                                            @foreach (MobileStore.Models.Entity.Category item in Model)
                                            {
                                                <tr id="row_@item.TypeID">
                                                    <td>@item.TypeID</td>
                                                    <td>@item.TypeName</td>
                                                    <td>@(item.TypeStatus == true ? "Hiển thị" : "Không hiển thị")</td>
                                                    <td class="text-center">
                                                        <div class="btn btn-primary btn-sm" style=" display: contents;">
                                                            <a href='@Url.Action("UpdateCategoryById", "AdminPage")/@item.TypeID' class="btn btn-primary btn-sm">
                                                                <i class="fa fa-edit"></i>
                                                                Edit
                                                            </a>
                                                        </div>
                                                        <div class="btn btn-danger btn-sm" style="display:inherit;">
                                                            @Ajax.ActionLink("Delete", "DeleteCategoryById", new { @id = item.TypeID }, new AjaxOptions
                                                            {
                                                                Confirm = "Bạn có muốn xóa bản ghi này?",
                                                                OnComplete = "$('#row_" + item.TypeID + "').remove()",
                                                                HttpMethod = "Delete"
                                                            })
                                                        </div>
                                                    </td>

                                                </tr>
                                            }

                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- /page content -->
