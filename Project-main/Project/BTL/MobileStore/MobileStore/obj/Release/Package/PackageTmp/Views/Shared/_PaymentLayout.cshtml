                                        @{Html.RenderAction("GetNumber", "Cart");}
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </nav>
                </div>
            </div>
        </div>

    </div>

    <!-- Page Content -->
    <!-- Banner Starts Here -->
    <div class="main-banner header-text" id="top" style="min-height: 450px;">
        @RenderBody();
    </div>
